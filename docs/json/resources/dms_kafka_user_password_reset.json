      "resource_schemas": {
        "huaweicloud_dms_kafka_user_password_reset": {
          "block": {
            "attributes": {
              "id": {
                "type": "string",
                "computed": true
              },
              "instance_id": {
                "type": "string",
                "description": "The ID of the Kafka instance to which the user belongs.",
                "required": true
              },
              "new_password": {
                "type": "string",
                "description": "The new password of the user.",
                "required": true,
                "sensitive": true
              },
              "region": {
                "type": "string",
                "description": "The region where the user whose password is to be reset is located.",
                "computed": true
              },
              "user_name": {
                "type": "string",
                "description": "The name of the user to reset the password.",
                "required": true
              }
            }
          },
          "product": {
            "short": "Kafka",
            "name": "Distributed Message Service for Kafka",
            "catalog": "Middleware",
            "name_cn": "分布式消息服务 Kafka",
            "catalog_cn": "应用中间件"
          }
        }
      }
    }
  }
}
